rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for readable and reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isTeacher() {
      return isSignedIn() && getUserRole() == 'teacher';
    }

    function isMeetingParticipant(meetingRoomId) {
      return isSignedIn() && exists(/databases/$(database)/documents/participants/$(meetingRoomId)/users/$(request.auth.uid));
    }
    
    // Users can only manage their own profile document.
    match /users/{uid} {
      allow read, create, update: if isOwner(uid);
      allow delete: if false;
    }

    /**
     * @description Governs access to meeting metadata documents.
     * @path /meetings/{meetingCode}
     */
    match /meetings/{meetingCode} {
      // Any signed-in user can look up a meeting to get its room ID.
      allow get: if isSignedIn();
      // Listing all meetings is disallowed for privacy.
      allow list: if false;
      // Only teachers can create meetings.
      allow create: if isTeacher() && request.resource.data.hostUid == request.auth.uid;
      // Only the teacher who hosted the meeting can update it (e.g., to set isActive to false).
      allow update: if isTeacher() && resource.data.hostUid == request.auth.uid;
      // Deleting meetings is disallowed to preserve history.
      allow delete: if false;
    }

    /**
     * @description Governs the real-time presence list for each meeting.
     * @path /participants/{meetingRoomId}/users/{uid}
     */
    match /participants/{meetingRoomId}/users/{uid} {
      // Any participant in the meeting can see who else is in the meeting.
      allow get, list: if isMeetingParticipant(meetingRoomId);
      // A user can only create their OWN participant document to join a meeting.
      allow create: if isOwner(uid);
      // A user can only update their OWN participant document (e.g., camera/mic status).
      allow update: if isOwner(uid);
      // A user can only delete their OWN participant document when they leave.
      allow delete: if isOwner(uid);
    }
  }
}
