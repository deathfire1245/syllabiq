rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for readable and reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isRole(role) {
      return isSignedIn() && getUserData(request.auth.uid).role == role;
    }
    
    function isTeacher() {
      return isRole('teacher');
    }

    function isAdmin() {
      return isRole('admin');
    }

    function isMeetingParticipant(meetingRoomId) {
      return isSignedIn() && exists(/databases/$(database)/documents/participants/$(meetingRoomId)/users/$(request.auth.uid));
    }
    
    // User profile rules
    match /users/{uid} {
      // Admins can read any user profile
      // Users can read their own profile
      allow get: if isAdmin() || isOwner(uid);
      // Admins can list all users for management purposes
      allow list: if isAdmin();
      // Users can create their own profile upon signup
      // Admins can create users manually
      allow create: if isOwner(uid) || isAdmin();
      // Users can update their own non-critical info. Role changes are protected.
      // Admins can update any user profile.
      allow update: if (isOwner(uid) && request.resource.data.role == resource.data.role) || isAdmin();
      // Deleting users is an admin-only action
      allow delete: if isAdmin();
    }

    // Meeting metadata rules
    match /meetings/{meetingCode} {
      // Any signed-in user can look up a meeting to get its room ID.
      allow get: if isSignedIn();
      // Listing all meetings is disallowed for privacy.
      allow list: if false;
      // Only teachers can create new meetings.
      allow create: if isTeacher() && request.resource.data.hostUid == request.auth.uid;
      // Only the teacher who hosted the meeting or an admin can update it.
      allow update: if (isTeacher() && resource.data.hostUid == request.auth.uid) || isAdmin();
      // Only an admin can delete a meeting record.
      allow delete: if isAdmin();
    }

    // Real-time presence list rules
    match /participants/{meetingRoomId}/users/{uid} {
      // Any participant in the meeting can see who else is in the meeting.
      allow get, list: if isMeetingParticipant(meetingRoomId);
      // A user can only create their OWN participant document to join.
      allow create: if isOwner(uid);
      // A user can only update their OWN participant document (e.g., camera/mic status).
      allow update: if isOwner(uid);
      // A user can only delete their OWN participant document when they leave.
      allow delete: if isOwner(uid);
    }
  }
}
